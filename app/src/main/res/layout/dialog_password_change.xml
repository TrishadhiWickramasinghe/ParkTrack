<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Header Background -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/green_gradient_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Lock Icon -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/lockIconCard"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="32dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_password_change"
            android:tint="#2E7D32" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Update Password"
        android:textColor="#1B5E20"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerBackground" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secure your account with new password"
        android:textColor="#757575"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <!-- Password Form Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/formCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#FAFAFA"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Current Password Input -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxStrokeColor="#81C784"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="password_toggle"
                app:endIconTint="#4CAF50"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="#4CAF50"
                app:hintTextColor="#4CAF50"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCurrentPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Old Password"
                    android:inputType="textPassword"
                    android:textColor="#2E7D32"
                    android:textSize="16sp"
                    android:paddingVertical="16dp"
                    android:fontFamily="@font/poppins_regular" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- New Password Input -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxStrokeColor="#81C784"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="password_toggle"
                app:endIconTint="#4CAF50"
                app:startIconDrawable="@drawable/ic_lock_new"
                app:startIconTint="#4CAF50"
                app:hintTextColor="#4CAF50"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:textColor="#2E7D32"
                    android:textSize="16sp"
                    android:paddingVertical="16dp"
                    android:fontFamily="@font/poppins_regular" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Confirm Password Input -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxStrokeColor="#81C784"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="password_toggle"
                app:endIconTint="#4CAF50"
                app:startIconDrawable="@drawable/ic_lock_confirm"
                app:startIconTint="#4CAF50"
                app:hintTextColor="#4CAF50"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textColor="#2E7D32"
                    android:textSize="16sp"
                    android:paddingVertical="16dp"
                    android:fontFamily="@font/poppins_regular" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password Requirements Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/requirementsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F1F8E9"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password Requirements"
                        android:textColor="#33691E"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvRequirements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Minimum 8 characters\n• Include uppercase &amp; lowercase\n• At least one number (0-9)\n• At least one special character"
                        android:textColor="#689F38"
                        android:textSize="12sp"
                        android:lineSpacingExtra="4dp"
                        android:fontFamily="@font/poppins_regular" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Strength Indicator -->
            <LinearLayout
                android:id="@+id/strengthContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:visibility="gone">

                <View
                    android:id="@+id/strengthIndicator1"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="#E0E0E0"
                    android:backgroundTint="#E0E0E0" />

                <View
                    android:id="@+id/strengthIndicator2"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:background="#E0E0E0"
                    android:backgroundTint="#E0E0E0" />

                <View
                    android:id="@+id/strengthIndicator3"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:background="#E0E0E0"
                    android:backgroundTint="#E0E0E0" />

                <View
                    android:id="@+id/strengthIndicator4"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="#E0E0E0"
                    android:backgroundTint="#E0E0E0" />
            </LinearLayout>

            <!-- Strength Text -->
            <TextView
                android:id="@+id/tvStrengthText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password strength: None"
                android:textColor="#757575"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/formCard">

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="CANCEL"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            app:cornerRadius="12dp"
            app:strokeColor="#4CAF50"
            app:strokeWidth="1.5dp"
            app:rippleColor="#E8F5E9" />

        <!-- Update Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdate"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="UPDATE"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            app:backgroundTint="#4CAF50"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_update"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#FFFFFF"
            app:rippleColor="#388E3C"
            android:elevation="4dp" />
    </LinearLayout>

    <!-- Progress Indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminate="true"
        android:indeterminateTint="#4CAF50"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonContainer"
        android:layout_marginTop="16dp" />

    <!-- Success Checkmark -->
    <ImageView
        android:id="@+id/ivSuccess"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_check_circle"
        android:tint="#4CAF50"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonContainer"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>