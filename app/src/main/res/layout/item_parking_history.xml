<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Row: Main Information -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <!-- Status Indicator -->
            <View
                android:id="@+id/statusIndicator"
                android:layout_width="4dp"
                android:layout_height="40dp"
                android:background="#4CAF50"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <!-- Parking Icon -->
            <ImageView
                android:id="@+id/iconParking"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_parking"
                android:tint="#3498DB"
                android:layout_toEndOf="@+id/statusIndicator"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp" />

            <!-- Main Content -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iconParking"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <!-- Car Number -->
                <TextView
                    android:id="@+id/tvCarNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MH12AB1234"
                    android:textSize="16sp"
                    android:textColor="#2C3E50"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp" />

                <!-- Date and Time -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="#7F8C8D"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 Dec 2023"
                        android:textSize="11sp"
                        android:textColor="#7F8C8D"
                        android:layout_marginStart="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" • "
                        android:textSize="11sp"
                        android:textColor="#7F8C8D"
                        android:layout_marginHorizontal="4dp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_time"
                        android:tint="#7F8C8D"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:30 AM"
                        android:textSize="11sp"
                        android:textColor="#7F8C8D"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Duration and Amount -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4h 30m"
                        android:textSize="11sp"
                        android:textColor="#E74C3C"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" • "
                        android:textSize="11sp"
                        android:textColor="#7F8C8D" />

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹150.00"
                        android:textSize="11sp"
                        android:textColor="#27AE60"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Status Badge -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#E8F5E9"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMPLETED"
                    android:textSize="10sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginVertical="8dp" />

        <!-- Entry/Exit Times Section -->
        <LinearLayout
            android:id="@+id/layoutEntryExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background_light"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENTRY"
                    android:textSize="10sp"
                    android:textColor="#7F8C8D"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_up"
                    android:tint="#2ECC71"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvEntryTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:30 AM"
                    android:textSize="13sp"
                    android:textColor="#2C3E50"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEntryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Dec 2023"
                    android:textSize="10sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Center Divider with Arrow -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingHorizontal="8dp">

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="#E0E0E0"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="#3498DB"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXIT"
                    android:textSize="10sp"
                    android:textColor="#7F8C8D"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_down"
                    android:tint="#E74C3C"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvExitTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:00 PM"
                    android:textSize="13sp"
                    android:textColor="#2C3E50"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvExitDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Dec 2023"
                    android:textSize="10sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Additional Details (Optional - Can be hidden/shown) -->
        <LinearLayout
            android:id="@+id/layoutExtraDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="12dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Parking Slot:"
                    android:textSize="12sp"
                    android:textColor="#7F8C8D" />

                <TextView
                    android:id="@+id/tvParkingSlot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A-12"
                    android:textSize="12sp"
                    android:textColor="#2C3E50"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vehicle Type:"
                    android:textSize="12sp"
                    android:textColor="#7F8C8D" />

                <TextView
                    android:id="@+id/tvVehicleType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sedan"
                    android:textSize="12sp"
                    android:textColor="#2C3E50"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Payment Mode:"
                    android:textSize="12sp"
                    android:textColor="#7F8C8D" />

                <TextView
                    android:id="@+id/tvPaymentMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online"
                    android:textSize="12sp"
                    android:textColor="#2C3E50"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Expand/Collapse Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0" />

            <ImageView
                android:id="@+id/btnExpand"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_expand_more"
                android:tint="#3498DB"
                android:layout_centerInParent="true"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </RelativeLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>