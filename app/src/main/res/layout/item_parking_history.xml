<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:strokeColor="#E8F5E9"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with Status -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Car Number with Icon -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_centerVertical="true">

                <!-- Car Icon -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardBackgroundColor="#E8F5E9"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/iconParking"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_car"
                        android:tint="#2E7D32" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Car Info -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Car Number -->
                    <TextView
                        android:id="@+id/tvCarNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MH12AB1234"
                        android:textSize="18sp"
                        android:textColor="#1B5E20"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginBottom="4dp" />

                    <!-- Date and Time Row -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Date -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_calendar_small"
                                android:tint="#689F38"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/tvDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15 Dec 2023"
                                android:textSize="12sp"
                                android:textColor="#689F38"
                                android:fontFamily="@font/poppins_medium" />
                        </LinearLayout>

                        <!-- Time -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_time_small"
                                android:tint="#689F38"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/tvTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="09:30 AM"
                                android:textSize="12sp"
                                android:textColor="#689F38"
                                android:fontFamily="@font/poppins_medium" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Status Badge -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#E8F5E9"
                app:cardElevation="0dp"
                app:strokeColor="#C8E6C9"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp">

                    <!-- Status Dot -->
                    <View
                        android:id="@+id/statusIndicator"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_green"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COMPLETED"
                        android:textSize="11sp"
                        android:textColor="#2E7D32"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing="0.02" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

        <!-- Entry/Exit Timeline -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layoutEntryExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F5F9F5"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Timeline Connector -->
                <View
                    android:layout_width="2dp"
                    android:layout_height="100dp"
                    android:background="#C8E6C9"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp" />

                <!-- Entry Point -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp">

                    <!-- Entry Dot -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@drawable/circle_green"
                            android:layout_centerInParent="true" />

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/circle_white"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>

                    <!-- Entry Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ENTRY"
                        android:textSize="10sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing="0.03"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="4dp" />

                    <!-- Entry Time -->
                    <TextView
                        android:id="@+id/tvEntryTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:30 AM"
                        android:textSize="16sp"
                        android:textColor="#1B5E20"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_gravity="center_horizontal" />

                    <!-- Entry Date -->
                    <TextView
                        android:id="@+id/tvEntryDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 Dec 2023"
                        android:textSize="12sp"
                        android:textColor="#689F38"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Center Arrow -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_timeline_arrow"
                    android:tint="#4CAF50"
                    android:layout_centerInParent="true" />

                <!-- Exit Point -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="8dp">

                    <!-- Exit Dot -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@drawable/circle_red"
                            android:layout_centerInParent="true" />

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/circle_white"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>

                    <!-- Exit Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EXIT"
                        android:textSize="10sp"
                        android:textColor="#E53935"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing="0.03"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="4dp" />

                    <!-- Exit Time -->
                    <TextView
                        android:id="@+id/tvExitTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02:00 PM"
                        android:textSize="16sp"
                        android:textColor="#1B5E20"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_gravity="center_horizontal" />

                    <!-- Exit Date -->
                    <TextView
                        android:id="@+id/tvExitDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 Dec 2023"
                        android:textSize="12sp"
                        android:textColor="#689F38"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Duration Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="#FFF3E0"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DURATION"
                        android:textSize="10sp"
                        android:textColor="#EF6C00"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing="0.03"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4h 30m"
                        android:textSize="16sp"
                        android:textColor="#EF6C00"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Amount Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="#E8F5E9"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AMOUNT"
                        android:textSize="10sp"
                        android:textColor="#2E7D32"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing="0.03"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹150.00"
                        android:textSize="16sp"
                        android:textColor="#2E7D32"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Extra Details (Collapsible) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layoutExtraDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F8FBF8"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:visibility="gone"
            app:strokeColor="#E8F5E9"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Parking Slot -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_parking_slot"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Parking Slot"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:id="@+id/tvParkingSlot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A-12"
                        android:textSize="14sp"
                        android:textColor="#2E7D32"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold" />
                </LinearLayout>

                <!-- Vehicle Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_vehicle_type"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vehicle Type"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:id="@+id/tvVehicleType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sedan"
                        android:textSize="14sp"
                        android:textColor="#2E7D32"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold" />
                </LinearLayout>

                <!-- Payment Mode -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_payment_mode"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Payment Mode"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:id="@+id/tvPaymentMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online"
                        android:textSize="14sp"
                        android:textColor="#2E7D32"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Expand/Collapse Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E8F5E9"
                android:layout_centerVertical="true" />

            <!-- Expand Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnExpand"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="#4CAF50"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_expand_more"
                    android:tint="#FFFFFF" />
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>