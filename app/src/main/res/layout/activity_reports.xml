<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_bg">

    <com.google.android.material.appbarcompatrootview.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_green">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:title="Reports &amp; Analytics"
            android:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_back" />
    </com.google.android.material.appbarcompatrootview.AppBarLayout>

    <!-- TabLayout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabTextColor="@color/text_hint"
        app:tabSelectedTextColor="@color/dark_green"
        app:tabIndicatorColor="@color/dark_green">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analytics" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Export" />
    </com.google.android.material.tabs.TabLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Daily Report Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDailyDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-01-15"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark" />

                <!-- Daily Stats Cards -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today's Income"
                                android:textSize="11sp"
                                android:textColor="@color/text_hint" />

                            <TextView
                                android:id="@+id/tvDailyIncome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹5000"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/dark_green"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Parked Vehicles"
                                android:textSize="11sp"
                                android:textColor="@color/text_hint" />

                            <TextView
                                android:id="@+id/tvDailyParkedVehicles"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/dark_green"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg Charge"
                                android:textSize="11sp"
                                android:textColor="@color/text_hint" />

                            <TextView
                                android:id="@+id/tvDailyAvgCharge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹200"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/dark_green"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Daily Chart -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/dailyChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

            <!-- Monthly Report Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvMonthlyDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-01"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark" />

                <!-- Monthly Stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Monthly Income"
                                android:textSize="11sp"
                                android:textColor="@color/text_hint" />

                            <TextView
                                android:id="@+id/tvMonthlyIncome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹150000"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/dark_green"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg Daily"
                                android:textSize="11sp"
                                android:textColor="@color/text_hint" />

                            <TextView
                                android:id="@+id/tvMonthlyAvgDaily"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹5000"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/dark_green"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Monthly Chart -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/monthlyChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

            <!-- Analytics Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analytics Overview"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark" />

                <!-- Analytics Stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Sessions"
                                android:textSize="11sp"
                                android:textColor="@color/text_hint" />

                            <TextView
                                android:id="@+id/tvAnalyticsTotalSessions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1250"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/dark_green"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Revenue"
                                android:textSize="11sp"
                                android:textColor="@color/text_hint" />

                            <TextView
                                android:id="@+id/tvAnalyticsRevenue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹750000"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/dark_green"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="12dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg Charge"
                            android:textSize="11sp"
                            android:textColor="@color/text_hint" />

                        <TextView
                            android:id="@+id/tvAnalyticsAvgCharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹600"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/dark_green"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Analytics Chart -->
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/analyticsChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

            <!-- Export Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Export Reports"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExportPdf"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Export as PDF"
                    android:layout_marginTop="16dp"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExportCsv"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Export as CSV"
                    android:layout_marginTop="12dp"
                    app:cornerRadius="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
