<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9F5">

    <!-- Background Decoration -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/green_gradient"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- App Bar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/green_gradient"
            app:title="Monthly Payment"
            app:subtitle="View &amp; Pay Monthly Bill"
            app:titleTextColor="#FFFFFF"
            app:subtitleTextColor="#E8F5E9"
            app:navigationIcon="@drawable/ic_back"
            android:elevation="8dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Monthly Payment"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.02"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_payment_history"
                    android:tint="#FFFFFF"/>
            </RelativeLayout>
        </com.google.android.material.appbar.MaterialToolbar>

        <!-- Month Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Month"
                    android:textSize="16sp"
                    android:textColor="#1B5E20"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp"/>

                <!-- Month Spinner with Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_calendar_month"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="12dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="#81C784"
                        app:boxStrokeWidth="1dp"
                        app:hintTextColor="#4CAF50"
                        android:hint="Month">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinnerMonth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:paddingVertical="12dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Monthly Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layoutSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Month Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_summary"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/tvMonth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="January 2024"
                        android:textSize="20sp"
                        android:textColor="#1B5E20"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>

                <!-- Stats Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:layout_marginBottom="24dp">

                    <!-- Total Hours -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F5F9F5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_timer"
                                android:tint="#4CAF50"
                                android:layout_marginBottom="12dp"/>

                            <TextView
                                android:id="@+id/tvTotalHours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 hours"
                                android:textSize="18sp"
                                android:textColor="#1B5E20"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Hours"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Total Amount -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F5F9F5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_money"
                                android:tint="#4CAF50"
                                android:layout_marginBottom="12dp"/>

                            <TextView
                                android:id="@+id/tvTotalAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹0.00"
                                android:textSize="18sp"
                                android:textColor="#1B5E20"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Amount"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Payment Status -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#4CAF50">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_payment_status"
                                android:tint="#FFFFFF"
                                android:layout_marginBottom="12dp"/>

                            <TextView
                                android:id="@+id/tvPaymentStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PENDING"
                                android:textSize="18sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Status"
                                android:textSize="12sp"
                                android:textColor="#E8F5E9"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Rate Info -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F5F9F5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_rate_info"
                                android:tint="#4CAF50"
                                android:layout_marginBottom="12dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹20/hour"
                                android:textSize="18sp"
                                android:textColor="#1B5E20"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hourly Rate"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </GridLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewSummary"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="View Summary"
                        android:textSize="14sp"
                        app:backgroundTint="#E8F5E9"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_summary"
                        app:iconSize="20dp"
                        app:iconTint="#4CAF50"
                        android:textColor="#4CAF50"
                        android:elevation="2dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDownloadSummary"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Download"
                        android:textSize="14sp"
                        app:backgroundTint="#E8F5E9"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_download"
                        app:iconSize="20dp"
                        app:iconTint="#4CAF50"
                        android:textColor="#4CAF50"
                        android:elevation="2dp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Pay Now Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPayNow"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:text="PAY NOW"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.03"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="#4CAF50"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_payment"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="#FFFFFF"
            app:rippleColor="#388E3C"
            android:elevation="8dp"/>

        <!-- Empty State -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_empty_calendar"
                android:tint="#81C784"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/tvNoData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No monthly data"
                android:textSize="18sp"
                android:textColor="#757575"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a different month to view payment details"
                android:textSize="14sp"
                android:textColor="#9E9E9E"
                android:textAlignment="center"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>