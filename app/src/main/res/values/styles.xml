<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Add this to your styles.xml -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="RoundedDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearance">@style/ShapeAppearance.Dialog</item>
    </style>
    <style name="ShapeAppearance.Dialog" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="DatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Material3.Title.Text</item>
    </style>
</resources>
